{% extends "layout/base.twig" %}

{% block base %}

<body class="text-lg">

    {# nav header #}
    <div class="flex justify-between flex-wrap bg-carolina text-white py-2 px-4">
        <a class="hover:text-navy" href={{ url_for('home') }}>Tar Heel Tailgate - Score Prediction With Friends</a>
        {% if isSignedIn() %}
            <span>
                {# admin things #}
                {% if isAdmin() %}
                    <span class="mr-8">
                        <a class='text-white mx-2 hover:text-navy' href="{{ url_for('users') }}"> Users</a>
                        <a class='text-white mx-2 hover:text-navy' href="{{ url_for('groups') }}"> Groups</a>
                        <a class='text-white mx-2 hover:text-navy' href="{{ url_for('teams') }}"> Teams</a>
                        <a class='text-white mx-2 hover:text-navy' href="{{ url_for('seasons') }}"> Seasons</a>
                    </span>
                {% endif %}
                {# end admin things #}

                <a class='mx-2 hover:text-navy' href={{ url_for('profile') }}>Profile</a> |
                <a class='mx-2 hover:text-navy' href={{ url_for('sign-out') }}>Sign out</a>

            </span>
        {% endif %}
    </div>
    {# end nav header #}

    {# main container #}
    <div class="h-screen p-4">

        {# error #}
        {% if flash('error') %}
            <div class="flex justify-center" role="alert">
                <div class="border border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700">
                    {% for message in flash('error') %}
                        <p>{{ message|e }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
        {# end error #}

        {# success #}
        {% if flash('success') %}
            <div class="flex justify-center" role="alert">
                <div class="border border-green-400 rounded-b bg-green-100 px-4 py-3 text-green-700">
                    {% for message in flash('success') %}
                        <p>{{ message|e }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
        {# end success #}


        {% block dashboardContent %}{% endblock %}


    </div>
    {# end main container #}

</body>

{% endblock %}