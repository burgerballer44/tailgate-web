{% extends "layout/dashboard-base.twig" %}

{% block content %}

{# add-player form #}
<form action="{{ url_for('add-player', { 'groupId': groupId, 'memberId': memberId }) }}" method="POST">

    {{ getHiddenHoneypot()|raw }}
    {{ getCsrfFields()|raw }}

    {{ textField('username', 'Username', 'text', 'what is the name of yor player?', 'required')|raw }}
    {% if errors.username is defined %} {{ displayErrors('username', errors)|raw }} {% endif %}
    {% if errors.group_id is defined %} {{ displayErrors('group_id', errors)|raw }} {% endif %}
    {% if errors.member_id is defined %} {{ displayErrors('member_id', errors)|raw }} {% endif %}

    {{ submitButton('Add Player')|raw }}
</form>
{# end add-player form #}

{% endblock %}