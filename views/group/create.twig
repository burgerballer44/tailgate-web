{% extends "layout/dashboard-base.twig" %}

{% block content %}

{# create-group form #}
<form action="{{ url_for('create-group') }}" method="POST">

    {{ getHiddenHoneypot()|raw }}
    {{ getCsrfFields()|raw }}

    {{ textField('name', 'Group Name', 'text', 'name of group', 'required')|raw }}
    {% if errors.name is defined %} {{ displayErrors('name', errors)|raw }} {% endif %}
    {% if errors.owner_id is defined %} {{ displayErrors('owner_id', errors)|raw }} {% endif %}

    {{ submitButton('Create Group')|raw }}
</form>
{# end create-group form #}

{% endblock %}