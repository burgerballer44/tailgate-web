{% extends "layout/dashboard-base.twig" %}

{% block content %}

{# update-group form #}
<form action="{{ url_for('update-group', { 'groupId': group.groupId }) }}" method="POST">

    {{ getHiddenHoneypot()|raw }}
    {{ getCsrfFields()|raw }}

    {{ textField('name', 'Group Name', 'text', 'name of group', 'required', group.name)|raw }}
    {% if errors.name is defined %} {{ displayErrors('name', errors)|raw }} {% endif %}
    {% if errors.owner_id is defined %} {{ displayErrors('owner_id', errors)|raw }} {% endif %}

    {{ submitButton('Update Group')|raw }}
</form>
{# end update-group form #}

{% endblock %}