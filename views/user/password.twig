{% extends "layout/dashboard-base.twig" %}

{% block content %}

{# update-password form #}
<form action="{{ url_for('update-password', { 'userId': userId }) }}" method="POST">

    {{ getHiddenHoneypot()|raw }}
    {{ getCsrfFields()|raw }}

    <input type="password" required class="block border border-gray-light w-full p-3 rounded mt-4" name="password" placeholder="Password" />
    {% if errors.password is defined %}
        {% for error in errors.password %}
            <p class="text-sm text-red-600 italic">{{ error|e }}</p>
        {% endfor %}
    {% endif %}
    <input type="password" required class="block border border-gray-light w-full p-3 rounded mt-4" name="confirm_password" placeholder="Confirm Password" />


    <button type="submit" class="w-full text-center py-3 rounded bg-green-500 text-white hover:bg-green-700 focus:outline-none my-1"
    >Update Password</button>
</form>
{# end update-password form #}

{% endblock %}