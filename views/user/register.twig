{% extends "layout/index-base.twig" %}

{% block content %}

{# register form #}
<div class="bg-gray-lighter my-8 flex flex-col">
    <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
        <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
            <form action="{{ url_for('register') }}" method="POST">

                {{ getHiddenHoneypot()|raw }}
                {{ getCsrfFields()|raw }}

                <h1 class="mb-8 text-3xl text-center">Register</h1>

                <input type="text" required class="block border border-gray-light w-full p-3 rounded mt-4" name="email" placeholder="Email" value="{% if old.email is defined %}{{ old.email }}{% endif %}" />
                {% if errors.email is defined %}
                    {% for error in errors.email %}
                        <p class="text-sm text-red-600 italic">{{ error|e }}</p>
                    {% endfor %}
                {% endif %}

                <input type="password" required class="block border border-gray-light w-full p-3 rounded mt-4" name="password" placeholder="Password" />
                {% if errors.password is defined %}
                    {% for error in errors.password %}
                        <p class="text-sm text-red-600 italic">{{ error|e }}</p>
                    {% endfor %}
                {% endif %}
                <input type="password" required class="block border border-gray-light w-full p-3 rounded mt-4" name="confirm_password" placeholder="Confirm Password" />

                <button type="submit" class="w-full text-center py-3 rounded bg-carolina text-white hover:bg-navy focus:outline-none mt-4"
                >Create Account</button>
            </form>

        </div>

        <div class="text-gray-700 mt-6">
            Already have an account? <a class="border-b border-navy" href={{ url_for('sign-in') }}>Sign In</a>.
        </div>
    </div>
</div>
{# end register form #}

{% endblock %}