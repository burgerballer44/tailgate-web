{% extends "layout/dashboard-base-admin.twig" %}

{% block content %}

{% if team is defined %}

    <h2>Updating - {{ team.designation }} {{ team.mascot }} </h2>

    {# update-team form #}
    <form action="{{ url_for('update-team', { 'teamId': team.teamId }) }}" method="POST">

        {{ getHiddenHoneypot()|raw }}
        {{ getCsrfFields()|raw }}
        
        {% if errors.teamId is defined %} {{ displayErrors('teamId', errors)|raw }} {% endif %}

        {{ textField('designation', 'Designation', 'text', 'where is this team', 'required', team.designation)|raw }}
        {% if errors.designation is defined %} {{ displayErrors('designation', errors)|raw }} {% endif %}

        {{ textField('mascot', 'Mascot', 'text', 'what is mascot', 'required', team.mascot)|raw }}
        {% if errors.mascot is defined %} {{ displayErrors('mascot', errors)|raw }} {% endif %}

        {{ submitButton('Update Team')|raw }}
    </form>
    {# end update-team form #}

{% else %}

    <p>Team is not defined</p>

{% endif %}

{% endblock %}