{% extends "layout/dashboard-base.twig" %}

{% block content %}

    <h1 class="py-4">Seasons</h1>

    <div class="my-2">
        <a class="p-2 mr-2 bg-gray-300 rounded" href="{{ url_for('create-season') }}">Create Season</a>
    </div>

    {% if seasons is defined %}
        {% for season in seasons %}
            <div>
                <a href={{ url_for('season', { 'seasonId': season.seasonId }) }}> <u>{{ season.seasonId }}</u> </a> |
                {{ season.sport }} |
                {{ season.seasonType }} |
                {{ season.name }} |
                {{ season.seasonStart }} |
                {{ season.seasonEnd }}
            </div>
        {% endfor %}
    {% endif %}

{% endblock %}