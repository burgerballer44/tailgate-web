{% extends "layout/dashboard-base-admin.twig" %}

{% block content %}

<div class="flex flex-col">
    
    <h2>Seasons</h2>

    <div class="my-2">
        <a class="button" href="{{ url_for('create-season') }}">Create Season</a>
    </div>

    {% if seasons is defined %}
        <ul class="list-decimal list-inside">
            {% for season in seasons %}
                <li class="hover:underline">
                    <a href={{ url_for('season', { 'seasonId': season.seasonId }) }}> {{ season.name }} - {{ season.sport }} </a>
                    {{ season.seasonStart }} - {{ season.seasonEnd }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

</div>

{% endblock %}