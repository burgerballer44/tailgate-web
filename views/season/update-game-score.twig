{% extends "layout/dashboard-base.twig" %}

{% block content %}

{# update-game-score form #}
<form action="{{ url_for('update-game-score', { 'seasonId': seasonId, 'gameId': gameId }) }}" method="POST">

    {{ getHiddenHoneypot()|raw }}
    {{ getCsrfFields()|raw }}

    {{ textField('home_team_score', 'Home Team Score', 'number', '', 'required')|raw }}
    {% if errors.home_team_score is defined %} {{ displayErrors('home_team_score', errors)|raw }} {% endif %}

    {{ textField('away_team_score', 'AwayTeam Score', 'number', '', 'required')|raw }}
    {% if errors.away_team_score is defined %} {{ displayErrors('away_team_score', errors)|raw }} {% endif %}

    {{ submitButton('Submit Score')|raw }}
</form>
{# end update-game-score form #}

{% endblock %}