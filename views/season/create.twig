{% extends "layout/dashboard-base.twig" %}

{% block content %}

{# create-season form #}
<form action="{{ url_for('create-season') }}" method="POST">

    {{ getHiddenHoneypot()|raw }}
    {{ getCsrfFields()|raw }}

    {{ dropdownField('sport', 'Sport', null, ['Football', 'Basketball'], 'Select sport')|raw }}
    {% if errors.sport is defined %} {{ displayErrors('sport', errors)|raw }} {% endif %}

    {{ dropdownField('season_type', 'Season Type', null, ["Regular-Season"], 'Select season type')|raw }}
    {% if errors.seasonType is defined %} {{ displayErrors('seasonType', errors)|raw }} {% endif %}

    {{ textField('name', 'Name', 'text', 'what is name of the season', 'required')|raw }}
    {% if errors.name is defined %} {{ displayErrors('name', errors)|raw }} {% endif %}

    {{ textField('season_start', 'Season Start', 'date', 'when does the season start', 'required')|raw }}
    {% if errors.seasonStart is defined %} {{ displayErrors('seasonStart', errors)|raw }} {% endif %}

    {{ textField('season_end', 'Season Start', 'date', 'when does the season end', 'required')|raw }}
    {% if errors.seasonEnd is defined %} {{ displayErrors('seasonEnd', errors)|raw }} {% endif %}

    {{ submitButton('Create Season')|raw }}
</form>
{# end create-season form #}

{% endblock %}