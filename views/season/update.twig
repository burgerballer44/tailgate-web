{% extends "layout/dashboard-base.twig" %}

{% block content %}

{# update-season form #}
<form action="{{ url_for('update-season', { 'seasonId': seasonId }) }}" method="POST">

    {{ getHiddenHoneypot()|raw }}
    {{ getCsrfFields()|raw }}

    {{ textField('sport', 'sport', 'text', 'what is the sport', 'required', season.sport)|raw }}
    {% if errors.sport is defined %} {{ displayErrors('sport', errors)|raw }} {% endif %}

    {{ textField('season_type', 'Season Type', 'text', 'what is type of season type', 'required', season.type)|raw }}
    {% if errors.season_type is defined %} {{ displayErrors('season_type', errors)|raw }} {% endif %}

    {{ textField('name', 'Name', 'text', 'what is name of the season', 'required', season.name)|raw }}
    {% if errors.name is defined %} {{ displayErrors('name', errors)|raw }} {% endif %}

    {{ textField('season_start', 'Season Start', 'date', 'when does the season start', 'required', season.seasonStart)|raw }}
    {% if errors.season_start is defined %} {{ displayErrors('season_start', errors)|raw }} {% endif %}

    {{ textField('season_end', 'Season Start', 'date', 'when does the season end', 'required', season.seasonEnd)|raw }}
    {% if errors.season_end is defined %} {{ displayErrors('season_end', errors)|raw }} {% endif %}

    {{ submitButton('Update Season')|raw }}
</form>
{# end update-season form #}

{% endblock %}