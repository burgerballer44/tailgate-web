<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8"/>
    <meta name="description" content="Score Prediction with Friends!"/>
    <meta name="keywords" content="tar, heel, tar heel, sports, score, football, predict"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Score Prediction With Friends</title>
    <link rel='shortcut icon' type='image/x-icon' href='{{ url_for('home') }}favicon.ico'/>
    {% if prodMode() %}
        <link href="{{ url_for('home') }}css/tailwind.min.css" rel="stylesheet">
    {% else %}
        <link href="{{ url_for('home') }}css/tailwind.css" rel="stylesheet">
    {% endif %}
</head>

<body class="bg-white text-lg">

    {% block base %}{% endblock %}

    {% block javascript %}{% endblock %}

    {% if prodMode() %}
        <!-- Matomo -->
        <script type="text/javascript">
          var _paq = window._paq || [];
          /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
          _paq.push(['trackPageView']);
          _paq.push(['enableLinkTracking']);
          (function() {
            var u="//matomo.tarheeltailgate.com/";
            _paq.push(['setTrackerUrl', u+'matomo.php']);
            _paq.push(['setSiteId', '1']);
            var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
            g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
          })();
        </script>
        <!-- End Matomo Code -->
    {% endif %}
</body>

</html>
